<div class="container">
  <div class="card m-3 rounded shadow">
    <div class="d-flex m-2 justify-content-center">
      <div class ="m-3">
        <% if @user.photo.attached? %>
        <%= cl_image_tag @user.photo.key, width:150, height: 150 %>
        <% else %>
        <%= image_tag("catprofile.jpeg", width: 150, height: 150) %>
        <% end %>
        <br>
        <p class="m-2 text-muted">
          <i class="fab fa-instagram"></i>
          <i class="fab fa-github"></i>
          <i class="fab fa-facebook"></i>
          <i class="fab fa-twitter"></i>
        </p>
      </div>
      <div>
        <h3 class="mt-3">
          <%= @user.username %>
        </h3>
        <h4>üìç <%= @user.address %></h4>
        <a href="<%= @user.weblink %>" target="_blank"><%= @user.weblink %></a>
        <p><%= @user.bio %></p>
        <span class="badge badge-pill badge-warning">Painting</span>
        <span class="badge badge-pill badge-primary">Drawing</span>
      </div>
      <% if @user == current_user %>
        <%= link_to "Edit", edit_profile_path %>
      <% end %>
    </div>
    <div class="container d-flex flex-wrap justify-content-center my-3">
      <% @user.arts.each do |art| %>
      <% if art.photos[0].present? %>
        <div class="card-category m-3 shadow rounded" style="background-image: url(<%= cl_image_path art.photos[0].key %>)">
          <div class="card-category-description d-flex align-items-center justify-content-center text-center">
            <p>
              <%= art.name %><br>
              by <%= art.user.email %>
              <br><br>
              <% if @user == current_user %>
                <%= link_to "Edit", edit_art_path(art) %>
                <%= link_to "Delete", art_path(art), method: :delete, data: { confirm: "Are you sure?" } %>
              <% else %>
                <% if current_user.present? %>
                  <%= link_to 'add to cart', orders_path(art_id: art.id), method: :post, remote: true, id: "btn-link-#{art.id}", class: 'btn btn-primary rounded-lg' %>
                <% end %>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
      <% end%>
    </div>

  <%= link_to "Add New Art", new_art_path, class: 'btn btn-dark rounded shadow' %>

  </div>
</div>
