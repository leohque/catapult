<%= render 'components/banner' %>
<div class="container my-3">
  <h1>Welcome to Catapult</h1>
  <p>Find & share art locally.</p>
  <div class="container d-flex justify-content-center">
    <div class="card m-3 p-3 w-25">Share</div>
    <div class="card m-3 p-3 w-25">Find</div>
    <div class="card m-3 p-3 w-25">Connect</div>
  </div>
</div>
<%= render 'components/carousel' %>

