<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Add a new artwork</h1>

      <%= simple_form_for @art do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :type %>
        <%= f.input :price %>
        <%= f.input :quantity %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
