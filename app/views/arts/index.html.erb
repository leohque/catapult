<div class="container d-flex justify-content-center my-3 flex-wrap">
  <% @arts.each do |art| %>
  <div class="card w-25 m-3 p-3 rounded shadow">
    ID: <%= art.id %>
    <%= link_to art.name, art_path(art) %>
    Created by <%= link_to art.user.email, user_profile_path(art.user.id) %>

    <%= link_to 'add to cart', orders_path(art_id: art.id), method: :post, remote: true, id: "btn-link-#{art.id}" %>
  </div>
  <% end %>
</div>

<div class="container text-center">
  <%= link_to "New Art", new_art_path %>
</div>

