<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class="container d-flex flex-wrap">
  <div class="card-category w-25" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    <div class="card-category-description">A test</div>
  </div>


  <% @arts.each do |art| %>
  <div class="card w-25">
    <% if art.photos[1].present? %>
    <div id="carouselExampleControls" class="card rounded shadow m-3 carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= cl_image_tag art.photos[0].key, height:300, width:300, crop: :fill, class: 'd-block w-100' %>
        </div>
        <div class="carousel-item">
          <%= cl_image_tag art.photos[1].key, height:300, width:300, crop: :fill, class: 'd-block w-100' %>
        </div>
        <div class="carousel-item">
          <%= cl_image_tag art.photos[0].key, height:300, width:300, crop: :fill, class: 'd-block w-100' %>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <% else %>
      <%= cl_image_tag art.photos[0].key, height: 150, width: 150, crop: :fill, class: 'card-img' %>
      <div class="card-img-overlay">
        <h5 class="card-title">!? title</h5>
        <p class="card-text">Card text</p>
      </div>
    <% end %>
  </div>
  <% end%>
</div>



