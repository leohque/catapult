<div class="container">
  <%= simple_form_for @art do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <!-- <%= f.input :category %> -->
    <%= f.input :price %>
    <% f.object.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <%= link_to "X", delete_photo_path(photo_index: @art.photos.index(photo), art_id: @art.id), method: :delete %>
    <% end %>
    <%= f.input :photos, label: "Add photos", as: :file, input_html: { multiple: true } %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>

